@model IEnumerable<medGet.Models.MedicineDetails>
@{
    ViewData["Title"] = "Add Medicine Data";
}

<div class="text-center">
    <div>
    <h4 scope="col">Update Medicine Data</h4>
    <a type="button" asp-controller="BulkAdd" asp-action="Insert" class="btn btn-info text-white">Update Medicine Data</a>
    </div>
    <hr />
</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Company</th>
                <th scope="col">Brand</th>
                <th scope="col">Generic</th>
                <th scope="col">Strength</th>
                <th scope="col">Type</th>
                <th scope="col">Price</th>
                <th scope="col">Used For</th>
                <th scope="col">DAR No.</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                if (item.UsedFor.Equals("R"))
                {
                    <tr class="table-secondary">
                        <th scope="row">@item.Id</th>
                        <td>@item.CompanyName</td>
                        <td>@item.BrandName</td>
                        <td>@item.Generic</td>
                        <td>@item.Strength</td>
                        <td>@item.Dosages</td>
                        <td>@item.Price</td>
                        <td>@item.UsedFor</td>
                        <td>@item.DAR</td>
                    </tr>
                }
                if (item.UsedFor.Equals("Human"))
                {
                    <tr class="table-info">
                        <th scope="row">@item.Id</th>
                        <td>@item.CompanyName</td>
                        <td>@item.BrandName</td>
                        <td>@item.Generic</td>
                        <td>@item.Strength</td>
                        <td>@item.Dosages</td>
                        <td>@item.Price</td>
                        <td>@item.UsedFor</td>
                        <td>@item.DAR</td>
                    </tr>
                }
                if (item.UsedFor.Equals("Veterinary"))
                {
                    <tr class="table-warning">
                        <th scope="row">@item.Id</th>
                        <td>@item.CompanyName</td>
                        <td>@item.BrandName</td>
                        <td>@item.Generic</td>
                        <td>@item.Strength</td>
                        <td>@item.Dosages</td>
                        <td>@item.Price</td>
                        <td>@item.UsedFor</td>
                        <td>@item.DAR</td>
                    </tr>
                }
            }
        </tbody>
    </table>

